<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="systemViewModel"
            type="com.codestallions.spacemmo.ui.viewmodel.SystemViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/system_fragment_background"
        tools:context=".ui.fragments.SystemFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/system_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</layout>